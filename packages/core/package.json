{
  "name": "@near-api-ts/core",
  "version": "0.2.1",
  "description": "Typescript library for interactions with Near Protocol in the browser or Node.js",
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "types",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "run": "tsx src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/curves": "^1.9.4",
    "@noble/hashes": "^1.8.0",
    "@scure/base": "^1.2.6",
    "borsh": "^2.0.0",
    "valibot": "^1.1.0",
    "zod": "^4.0.11"
  },
  "devDependencies": {
    "@near-js/jsonrpc-types": "^1.3.4"
  }
}
